{
  "manifest_version": 2,
  "name": "Uptime",
  "short_name": "Browser Uptime",
  "version": "0.4",
  "description": "Tracks browser uptime",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon_19.png"
  },
  "background": {
    "scripts": [
      "uptime.js"
    ],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "permissions": [
    "notifications",
    "storage"
  ],
  "web_accessible_resources": [
    "icon_48.png"
  ]
}
